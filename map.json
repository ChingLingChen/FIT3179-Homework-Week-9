{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 900,
  "title": {
    "text": "Weather Station Locations in Malaysia",
    "fontSize": 26,
    "font": "sans-serif",
    "anchor": "start"
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ChingLingChen/FIT3179-Homework-Week-9/main/my.json",
        "format": {
          "type": "json"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f0f0f0",
        "stroke": "#616161",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/ChingLingChen/FIT3179-Homework-Week-9/main/full_locations.csv"
      },
      "mark": {
        "type": "circle",
        "size": 60,
        "opacity": 0.7
      },
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "tooltip": [
          {"field": "identifying_location", "type": "nominal", "title": "Location"},
          {"field": "state", "type": "nominal", "title": "State"},
          {"field": "city", "type": "nominal", "title": "City"}
        ],
        "color": {
          "field": "state",
          "type": "nominal",
          "scale": {
            "scheme": "category20"
          },
          "legend": {"title": "State"}
        }
      }
    },
    {
      "data": {"graticule": {"step": [10, 10]}},
      "mark": {
        "type": "geoshape",
        "stroke": "#aaa",
        "strokeWidth": 0.5
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "center": [113.5, 2.5],
    "scale": 1800
  }
}